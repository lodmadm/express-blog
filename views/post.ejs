<%- include header %>
<div class="am-tabs am-margin" id="post">
      <div class="am-tab-panel am-fade am-active am-in" id="tab2">
        <form class="am-form" method="post">
          <div class="am-g am-margin-top">
            <div class="am-u-sm-12 am-u-md-2 am-text-right">
              文章标题
            </div>
            <div class="am-u-sm-12 am-u-md-4">
              <input type="text" class="am-input-sm" name="title">
            </div>
            <div class="am-hide-sm-only am-u-md-6">*必填</div>
          </div>
          <div class="am-g am-margin-top">
            <div class="am-u-sm-12 am-u-md-2 am-text-right">
              标签
            </div>
            <div class="am-u-sm-12 am-u-md-2">
              <input type="text" class="am-input-sm" name="tag1">
            </div>
            <div class="am-u-sm-12 am-u-md-2">
              <input type="text" class="am-input-sm" name="tag2">
            </div>
            <div class="am-u-sm-12 am-u-md-2">
              <input type="text" class="am-input-sm" name="tag3">
            </div>
            <div class="am-hide-sm-only am-u-md-4">*必填</div>
          </div>
          <div class="am-g am-margin-top-sm">
            <div class="am-u-sm-12 am-u-md-2 am-text-right admin-form-text">
              内容描述
            </div>
            <div class="am-u-sm-12 am-u-md-10">
              <textarea rows="12" placeholder="请使用富文本编辑插件" name="post"></textarea>
            </div>
          </div>
          <div class="am-g am-margin-top" style="text-align:center;"><input class="am-btn am-btn-primary am-btn-xs" type="submit" value="提交"></div>
        </form>
      </div>
    </div>
  </div>
<%- include footer %>